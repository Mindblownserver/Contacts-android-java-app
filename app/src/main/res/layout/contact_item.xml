<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/note"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/contact_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/contact_click_ripple"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/bg_color"
        >
        <LinearLayout
            android:id="@+id/contact_curs_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingStart="5dp"
            android:background="@drawable/first_alphabet_contact"
            >
            <androidx.cardview.widget.CardView

                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/profile_pic"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/contact_curs_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mohamed Yassine Kharrat"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>